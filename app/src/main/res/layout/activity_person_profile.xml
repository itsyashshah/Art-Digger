<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".PersonProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_image"
                android:layout_marginTop="15dp"
                android:text="Profile Name "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/person_profile_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_marginTop="5dp"
                android:text="User Name "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_profile_user_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_user_name"
                android:layout_marginTop="5dp"
                android:text="This is a example Status."
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_profile_user_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_user_status"
                android:layout_marginTop="5dp"
                android:text="Country Canada "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_profile_user_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_user_country"
                android:layout_marginTop="5dp"
                android:text="Dob "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_profile_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_user_dob"
                android:layout_marginTop="5dp"
                android:text="Male/Female "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/person_profile_send_friend_request_btn"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_user_gender"
                android:layout_marginTop="45dp"
                android:background="@color/colorPrimaryDark"
                android:text="Send Connection"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/person_profile_send_decline_request_btn"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_send_friend_request_btn"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_red_dark"
                android:text="Decline Connection"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>
            
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>